{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/comments.js": { "memory": 1024, "maxDuration": 10 },
    "api/index.js": { "memory": 1024, "maxDuration": 10 },
    "api/like.js": { "memory": 1024, "maxDuration": 10 },
    "api/user.js": { "memory": 1024, "maxDuration": 10 }
  },
  "routes": [
    { "src": "/api/comments", "dest": "/api/comments.js" },
    { "src": "/api/like", "dest": "/api/like.js" },
    { "src": "/api/user", "dest": "/api/user.js" },
    { "src": "/api/(.*)", "dest": "/api/index.js" }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
