{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/api/comments", "dest": "/api/index.js" },
    { "src": "/api/likes", "dest": "/api/index.js" },
    { "src": "/api/users", "dest": "/api/index.js" }
  ]
}
